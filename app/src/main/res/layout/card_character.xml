<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/character"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/character_border"
    android:orientation="vertical">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_character_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        tool:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_character_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/caption"
            tool:text="Status" />

        <TextView
            android:id="@+id/tv_character_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/subtitle_1"
            tool:text="Planet Blue" />
    </LinearLayout>
</LinearLayout>