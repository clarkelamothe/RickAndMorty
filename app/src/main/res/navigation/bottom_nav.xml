<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/characterFragment">
    <fragment
        android:id="@+id/characterFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.character.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/goToFilterCharacter"
            app:destination="@id/filterCharacterFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location">
        <action
            android:id="@+id/goToFilterLocation"
            app:destination="@id/filterLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.episode.EpisodeFragment"
        android:label="Episode"
        tools:layout="@layout/fragment_episode">
        <action
            android:id="@+id/goToFilterEpisode"
            app:destination="@id/filterEpisodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterCharacterFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.filter.FilterCharacterFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter_character" />
    <fragment
        android:id="@+id/filterEpisodeFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.filter.FilterEpisodeFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter_episode" />
    <fragment
        android:id="@+id/filterLocationFragment"
        android:name="com.clarkelamothe.rickandmortyapp.ui.filter.FilterLocationFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter_location" />

</navigation>